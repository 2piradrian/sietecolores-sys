generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id     String @id @map("_id") @db.ObjectId @default(auto())
  code   String @unique
  name   String @default("Desconocido")
  type   String @default("Desconocido")
  size   String @default("Desconocido")
  weight Float  @default(0)

  BudgetProduct BudgetProduct[]
}

model BudgetProduct {
  id        String    @id @map("_id") @db.ObjectId @default(auto())
  price     Float     @default(0) // El precio es unitario
  quantity  Int       @default(1)

  product   Products  @relation(fields: [productId], references: [id])
  productId String    @db.ObjectId
  budget    Budget    @relation(fields: [budgetId], references: [id])
  budgetId  String    @db.ObjectId
}

model Budget {
  id        String          @id @map("_id") @db.ObjectId @default(auto())
  client    String          @default("Desconocido")
  createdAt DateTime        @default(now())
  total     Float           @default(0)

  products  BudgetProduct[]
}


